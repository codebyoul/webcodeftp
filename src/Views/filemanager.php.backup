        import { linter, lintGutter, lintKeymap } from 'https://esm.sh/@codemirror/lint@6.5.0?deps=@codemirror/state@6.4.0';
        import { syntaxTree } from 'https://esm.sh/@codemirror/language@6.10.0?deps=@codemirror/state@6.4.0';
